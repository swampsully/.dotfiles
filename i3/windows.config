## This is for the customization section of this config ##

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:DejaVu Sans Mono 16

# Disables title bar for windows. And ads gaps sorund the window
for_window [class="^.*"] border pixel 0

gaps inner 4
gaps outer 9

# class                 border  backgr. text    indicator child_border
client.focused           $primary  $bg $white $alert  $primary 
client.focused_inactive  #16161d #16161d $white #16161d   #16161d
client.unfocused         #16161d #16161d $white #16161d   #16161d


# Ceneter the titles on windows
title_align center

